@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>
<partial name="_NotificationPartial" />

<div class="text-end">
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</div>
<table class="table table-striped mb-3">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>CategoryId</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
            
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category?.Name</td>
                <td>@product.Quantity</td>
                <td>@product.Price</td>

                <td>
                    <a asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>

